<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="youngun.tis.user.management.dao.mapper.UserMapper">
	
	<resultMap id="userMap" type="user">
		<id property="memberNum" column="member_num" />
		<result property="userName" column="user_name"/>
		<result property="userId" column="user_id"/>
		<result property="password" column="pw"/>
	</resultMap>
	
	<resultMap id="selectIdMap" type="user">
		<result property="userId" column="user_id"/>
	</resultMap>
	
	
	<select id="selectUserId" parameterType="String" resultMap="selectIdMap">
		select user_id userId
		from members
		where user_id like #{userId}
	</select>	
	
	<!-- 회원가입  -->
	<insert id="insertUser" parameterType="user">
		insert into members(member_num, user_name, user_id, pw, birth, phone_num, email, nickname, gender)
		values(mem_num_seq.nextval, #{userName}, #{userId}, #{password}, #{birth}, #{phoneNum}, #{email}, #{nickName}, #{gender})
	</insert>
	
	
</mapper>